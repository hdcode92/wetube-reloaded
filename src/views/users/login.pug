extends ../base


block content 
    if errorMessage 
        span=errorMessage 
    form(method="POST")
        input(placeholder="Username" name="username", type = "text", required)
        input(placeholder="Password" name="password", type = "password", required, minlength=6)
        input(type="submit", value="Log in")
        br
        a(href="/users/github/start") Continue with Github &rarr;
    hr 
    div 
        span Don't have an account? 
        a(href="/join") Log in now &rarr;