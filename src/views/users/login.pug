extends ../base


block content 
    if errorMessage 
        span=errorMessage 
    form(method="POST")
        input(placeholder="Username" name="username", type = "text", required)
        input(placeholder="Password" name="password", type = "password", required, minlength=6)
        input(type="submit", value="Log in")
        include ../partials/social-login
    div.auth-switch
        span Don't have an account? 
        a(href="/join") join now &rarr;